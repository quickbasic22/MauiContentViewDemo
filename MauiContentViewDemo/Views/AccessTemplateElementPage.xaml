<?xml version="1.0" encoding="UTF-8"?>
<controls:HeaderFooterPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiContentViewDemo.Controls"
             x:Class="MauiContentViewDemo.AccessTemplateElementPage"
             Title="Access template element demo"
             HeaderText="MyApp"
             ControlTemplate="{StaticResource TealTemplate}">

    <StackLayout Margin="10">
        <Entry Placeholder="Enter username" />
        <Entry Placeholder="Enter password"
                IsPassword="True" />
        <Button Text="Login" />
    </StackLayout>

</controls:HeaderFooterPage>
